# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/mindcare_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=mindcare_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production-min-32-characters
DEBUG=True

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Google AI (Gemini) Configuration
GOOGLE_API_KEY=your-google-ai-api-key

# File Upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Admin Configuration
ADMIN_EMAIL=admin@mindcare.ai
ADMIN_PASSWORD=Admin@123456

# Application Settings
APP_NAME=MindCare AI
APP_URL=http://localhost:5173
API_VERSION=v1
